{
  "name": "esnaadm",
  "version": "2.0.0",
  "private": true,
  "description": "EsnaadM is a versatile mobile application developed by jac.mil.ae",
  "main": "dist/main.cjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsc && node rename.cjs && electron .",
    "build": "tsc && node rename.cjs && set USE_HARD_LINKS=false && electron-builder"
  },
  "author": "a.arif.r@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "electron": "35.0.0",
    "electron-builder": "25.1.8",
    "fs-extra": "11.3.0"
  },
  "build": {
    "appId": "ae.mil.jac.esnaadm",
    "productName": "EsnaadM",
    "mac": {
      "icon": "dist/icons/mac/icon.icns"
    },
    "win": {
      "icon": "dist/icons/win/icon.ico",
      "target": "nsis",
      "sign" : false
    },
    "linux": {
      "icon": "dist/icons/png/64x64.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": false,
      "installerIcon": "dist/icons/win/icon.ico",
      "uninstallerIcon": "dist/icons/win/icon.ico",
      "uninstallDisplayName": "Uninstall EsnaadM 2"
    },
    "directories": {
      "output": "build"
    }
  }
}
